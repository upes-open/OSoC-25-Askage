{
    "manifest_version": 3,
    "name": "Askage â€” Simple Chat for Webpages",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "oauth2": {
      "client_id": "DUMMY_CLIENT_ID.apps.googleusercontent.com",
      "scopes": ["profile", "email"]
    },
    "permissions": [
      "identity",
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": ["<all_urls>"]
  }
  